# use vi keybindings in bash
set -o vi
# but keep C-p C-n from emacs
bind '"\C-p": "\C-[ k A"'
bind '"\C-n": "\C-[ j A"'
bind '"\C-e": "\C-[ A"'
bind '"\C-a": "\C-[ I"'
# use simultaneous kj to enter normal mode
bind -m vi-insert '"kj": vi-movement-mode'
bind -m vi-insert '"jk": vi-movement-mode'

# opt in to using ** in globs on newer versions of bash
#shopt -s globstar

# Aliases
alias vi='vim'
alias g='git'
alias gs='git status'
alias gd='git diff'
alias gdh='git diff --cached'
alias js='jobs'
alias ps='ps aux'
alias c='clear'
